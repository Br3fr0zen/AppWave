<resources>

    <!-- Base application theme. -->

    <style name="WaveTheme" parent="@style/_WaveTheme" />

    <style name="_WaveTheme" parent="@android:style/Theme.Holo.Light">

        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>


        <item name="android:editTextBackground">@drawable/appwave_edit_text_holo_light</item>
        <item name="android:buttonStyle">@style/ButtonAppWave</item>
        <item name="android:imageButtonStyle">@style/ImageButtonAppWave</item>
        <item name="android:listViewStyle">@style/_WaveTheme.BackgroundInbox</item>
        <item name="android:actionBarStyle">@color/appwave_color</item>
        <item name="android:gridViewStyle">@style/_WaveTheme.BackgroundInbox.GridView</item>
    </style>


    <style name="_WaveTheme.BackgroundInbox">
        <item name="android:background">@color/background_inbox</item>
        <item name="android:divider">@null</item>
    </style>

    <style name="_WaveTheme.BackgroundInbox.GridView">
        <item name="android:padding">@dimen/user_grid_spacing</item>
    </style>

    <style name="WaveTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" >

    </style>
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="ButtonAppWave" parent="android:Widget.Holo.Light.Button">
        <item name="android:background">@drawable/appwave_btn_default_holo_light</item>
    </style>

    <style name="ImageButtonAppWave" parent="android:Widget.Holo.Light.ImageButton">
        <item name="android:background">@drawable/appwave_btn_default_holo_light</item>
    </style>

    <style name="AppCompatTheme" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
    </style>

</resources>
